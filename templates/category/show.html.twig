{% extends 'base.html.twig' %}

{% block title %}Catégorie{% endblock %}

{% block body %}
    <h1>Catégorie "{{ category.name }}"</h1>

    <table>
        <tr>Id : {{ category.id }} <br/></tr>
        <tr>Îcone : <img src="{{app.request.basepath}}/images/{{ category.image }}" alt="{{ category.name }}" class ="icon"></tr>
    </table>

    <a href="{{ path('app_category_index') }}"><img src="{{ asset('images/retour_icon.png') }}" alt="Retour à la liste" class="icon"></a>

    <a href="{{ path('app_category_edit', {'id': category.id}) }}"><img src="{{ asset('images/edit_icon.png') }}" alt="Modifier" class="icon"></a>

    {{ include('category/_delete_form.html.twig') }}
{% endblock %}
